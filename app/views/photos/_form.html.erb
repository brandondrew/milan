<% form_for(@photo) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :photo_url %><br />
    <%= f.text_field :photo_url %>
  </p>
  <p>
    <%= f.label :photo_caption %><br />
    <%= f.text_field :photo_caption %>
  </p>
  <p>
    <%= f.label :photo_width %><br />
    <%= f.text_field :photo_width %>
  </p>
  <p>
    <%= f.label :photo_height %><br />
    <%= f.text_field :photo_height %>
  </p>
    <%= f.submit "Save" %>
  <% if @view_mode == :edit %>
    <%= link_to 'Show', @photo %> &nbsp;
  <% end %>
  <%= link_to 'Back', photos_path %>

<% end %>


